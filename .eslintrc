{
  "globals": {
    "describe": true,
    "before": true,
    "beforeEach": true,
    "it": true,
    "expect": true
  },
  "rules": {
    "indent": [ 2, 2 ],
    "quotes": [ 2, "single" ],
    "linebreak-style": [ 2, "unix" ],
    "semi": [ 2, "always" ],
    "no-console": [0]
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "plugins": ["react"],
  "parser": "babel-eslint",
  "extends": "eslint:recommended",
  "ecmaFeatures": {
    "modules": true,
    "jsx": true,
    "experimentalObjectRestSpread": true
  }
}
